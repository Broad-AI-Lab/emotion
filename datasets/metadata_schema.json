{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://agkphysics.github.io/schemas/emotional-speech-data/0.1",
  "description": "Metadata for an emotional speech dataset.",
  "definitions": {
    "doiType": {
      "description": "A DOI.",
      "type": "string",
      "format": "regex",
      "pattern": "^10\\.[^/]+/[^/]+$"
    },
    "hdlType": {
      "description": "A handle.",
      "type": "string",
      "format": "regex",
      "pattern": "^[^/]+/[^/]+$"
    },
    "langType": {
      "description": "Language represented by IETF Language tag (simplified).",
      "type": "string",
      "format": "regex",
      "pattern": "^[a-z]{2,3}-[A-Z]{2}$"
    },
    "countryType": {
      "description": "Country tag as specified in ISO-3166 alpha-2.",
      "type": "string",
      "format": "regex",
      "pattern": "^[A-Z]{2}$"
    },
    "annotationType": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of this annotation type (e.g. \"labels\", \"valence\").",
          "type": "string",
          "minLength": 1
        },
        "type": {
          "description": "The type of annotation.",
          "type": "string"
        }
      },
      "required": [
        "name",
        "type"
      ]
    },
    "dimensionalAnnotationType": {
      "allOf": [
        {
          "$ref": "#/definitions/annotationType"
        },
        {
          "description": "A dimensional annotation such as valence or arousal.",
          "properties": {
            "type": {
              "description": "The type of dimensional annotation, either discrete or continuous.",
              "type": "string",
              "enum": [
                "discrete",
                "continuous"
              ]
            },
            "minimum": {
              "description": "The minumum numeric value.",
              "type": "integer"
            },
            "maximum": {
              "description": "The maximum numeric value.",
              "type": "integer"
            }
          },
          "if": {
            "properties": {
              "type": {
                "const": "discrete"
              }
            }
          },
          "then": {
            "properties": {
              "steps": {
                "description": "The number of distinct values in this discrete annotation.",
                "type": "integer",
                "minimum": 2
              }
            },
            "required": [
              "type",
              "minimum",
              "maximum",
              "steps"
            ]
          },
          "else": {
            "required": [
              "type",
              "minimum",
              "maximum"
            ]
          }
        }
      ]
    },
    "labelAnnotationType": {
      "allOf": [
        {
          "$ref": "#/definitions/annotationType"
        },
        {
          "properties": {
            "type": {
              "type": "string",
              "const": "labels"
            },
            "labels": {
              "description": "List of discrete emotion labels.",
              "type": "array",
              "items": {
                "$comment": "Is it possible to feasibly make this an enum?",
                "description": "An emotional label.",
                "type": "string",
                "minLength": 1
              }
            }
          },
          "required": [
            "type",
            "labels"
          ]
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "version": {
      "description": "The metadata version.",
      "type": "string",
      "const": "0.3"
    },
    "dataset": {
      "description": "A dataset object.",
      "type": "object",
      "properties": {
        "id": {
          "description": "A dataset ID consisting only of ASCII alphabetic characters.",
          "type": "string",
          "format": "regex",
          "pattern": "^[a-zA-Z_-]+$"
        },
        "title": {
          "description": "A title for the dataset.",
          "type": "string",
          "minLength": 1
        },
        "description": {
          "description": "A description of the dataset.",
          "type": "string"
        },
        "url": {
          "description": "The URL this dataset or information about this dataset is located at.",
          "type": "string",
          "format": "uri"
        },
        "doi": {
          "description": "The DOI for this dataset.",
          "$ref": "#/definitions/doiType"
        },
        "hdl": {
          "description": "The handle for this dataset.",
          "$ref": "#/definitions/hdlType"
        },
        "paper": {
          "description": "A paper associated with this dataset.",
          "type": "object",
          "properties": {
            "doi": {
              "description": "The paper's DOI.",
              "$ref": "#/definitions/doiType"
            },
            "url": {
              "description": "A URL that points to the paper.",
              "type": "string",
              "format": "url"
            },
            "title": {
              "description": "The paper title.",
              "type": "string",
              "minLength": 1
            },
            "year": {
              "description": "Year the paper was published.",
              "type": "string",
              "format": "regex",
              "pattern": "^[0-9]{4}$"
            }
          },
          "required": [
            "url",
            "title"
          ]
        },
        "license": {
          "description": "The datset license.",
          "type": "object",
          "properties": {
            "type": {
              "description": "The major type of license.",
              "type": "string",
              "enum": [
                "ISC",
                "MIT",
                "BSD",
                "CC",
                "ODBL",
                "Public",
                "Academic",
                "Other",
                "Custom"
              ]
            },
            "subtype": {
              "description": "An optional license subtype.",
              "type": "string"
            }
          },
          "required": [
            "type"
          ]
        },
        "version": {
          "description": "An optional dataset version.",
          "type": "string",
          "minLength": 1
        },
        "authors": {
          "description": "List of authors of the dataset. These may or may not be the same authors of the paper.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "description": "The author's name.",
                "type": "string",
                "minLength": 1
              },
              "institution": {
                "description": "The author's institution.",
                "type": "string",
                "minLength": 1
              },
              "email": {
                "description": "The author's email.",
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "name",
              "institution"
            ]
          }
        },
        "initial_release": {
          "description": "The dataset's initial release date.",
          "type": "string",
          "format": "date"
        },
        "latest_release": {
          "description": "The dataset's most recent release date.",
          "type": "string",
          "format": "date"
        },
        "languages": {
          "description": "List of languages present in the datset.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/langType"
          }
        },
        "countries": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/countryType"
          }
        },
        "accents": {
          "description": "List of regional accents present in the dataset.",
          "type": "array",
          "items": {
            "description": "An accent present in the dataset.",
            "type": "string",
            "minLength": 1
          }
        },
        "elicitation": {
          "description": "Method used to generate emotional speech.",
          "type": "string",
          "enum": [
            "acted-explicit",
            "acted-induced",
            "natural"
          ]
        },
        "speakers": {
          "description": "List of speakers in the dataset.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "description": "Speaker ID.",
                "type": "string",
                "minLength": 1
              },
              "name": {
                "description": "Speaker name.",
                "type": "string"
              },
              "age": {
                "description": "Speaker age.",
                "type": "integer"
              },
              "languages": {
                "description": "List of languages this person speaks.",
                "type": "array",
                "items": {
                  "$ref": "#/definitions/langType"
                }
              },
              "country_origin": {
                "description": "Speaker's country of origin.",
                "$ref": "#/definitions/countryType"
              },
              "country_residence": {
                "description": "Speaker's current country of residence.",
                "$ref": "#/definitions/countryType"
              },
              "accent": {
                "description": "Speaker's regional accent.",
                "type": "string"
              },
              "gender": {
                "description": "The gender of the speaker.",
                "type": "string",
                "enum": [
                  "male",
                  "female"
                ]
              },
              "group": {
                "description": "The speaker group this speaker is in. Default is own group containing only self.",
                "type": "integer"
              }
            },
            "required": [
              "id",
              "languages",
              "country_residence",
              "accent"
            ]
          }
        },
        "cliptypes": {
          "description": "Types of audio clips in this dataset.",
          "type": "array",
          "items": {
            "properties": {
              "format": {
                "description": "Audio format.",
                "type": "string",
                "enum": [
                  "wav",
                  "mp3",
                  "mp4",
                  "flac",
                  "aiff",
                  "nist"
                ]
              },
              "samplerate": {
                "description": "Sample rate in Hz.",
                "type": "integer"
              },
              "channels": {
                "description": "Number of audio channels, either 1 or 2.",
                "type": "integer",
                "minimum": 1,
                "maximum": 2
              },
              "bits": {
                "description": "Number of bits of audio per sample. Note that this is not the stored number of bits.",
                "type": "integer",
                "minimum": 16,
                "maximum": 32
              }
            },
            "required": [
              "format",
              "samplerate",
              "channels",
              "bits"
            ]
          }
        },
        "clipsets": {
          "description": "List of clip sets in this dataset. A clip set is a list of clips in the dataset, and there may be multiple sets per dataset.",
          "type": "array",
          "items": {
            "description": "File describing a set of clips in this dataset.",
            "type": "object",
            "properties": {
              "name": {
                "description": "Name of this clip set. At least one clipset should be named \"default\".",
                "type": "string",
                "minLength": 1
              },
              "path": {
                "description": "Must be a relative path to the file.",
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "name",
              "path"
            ]
          },
          "contains": {
            "properties": {
              "name": {
                "type": "string",
                "const": "default"
              }
            }
          },
          "uniqueItems": true
        },
        "annotationtypes": {
          "description": "Types of annotations present in this dataset.",
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/dimensionalAnnotationType"
              },
              {
                "$ref": "#/definitions/labelAnnotationType"
              }
            ]
          }
        },
        "annotationsets": {
          "description": "List of annotation sets in this dataset. An annotation set is a set of annotations for some clips, and there may be multiple sets per dataset.",
          "type": "array",
          "items": {
            "description": "File describing annotations for clips in this dataset.",
            "type": "object",
            "properties": {
              "name": {
                "description": "The name of this annotation set. At least one annotation set should be named \"default\".",
                "type": "string",
                "minLength": 1
              },
              "annotationtype": {
                "description": "The annotation type. Must be the name of one of the defined annotation types.",
                "type": "string",
                "minLength": 1
              },
              "path": {
                "description": "Must be a relative path to the file.",
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "name",
              "annotationtype",
              "path"
            ]
          },
          "contains": {
            "properties": {
              "name": {
                "const": "default"
              }
            }
          },
          "uniqueItems": true
        }
      },
      "required": [
        "id",
        "title",
        "url",
        "license",
        "authors",
        "latest_release",
        "languages",
        "countries",
        "accents",
        "speakers",
        "cliptypes",
        "clipsets",
        "annotationtypes",
        "annotationsets"
      ]
    }
  },
  "required": [
    "version",
    "dataset"
  ]
}
